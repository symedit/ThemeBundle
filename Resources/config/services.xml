<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="symedit_theme.loader.class">SymEdit\Bundle\ThemeBundle\Loader\ThemeLoader</parameter>
        <parameter key="symedit_theme.model.theme.class">SymEdit\Bundle\ThemeBundle\Model\Theme</parameter>
    </parameters>

    <services>
        <service id="symedit_theme.loader" class="%symedit_theme.loader.class%">
            <argument>%symedit_theme.theme_directory%</argument>
            <argument>%symedit_theme.public_directory%</argument>
        </service>

        <service id="symedit_theme.theme" class="%symedit_theme.model.theme.class%" factory-service="symedit_theme.loader" factory-method="getTheme">
            <argument>%symedit_theme.active_theme%</argument>
        </service>
    </services>
</container>
